<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RetroNova" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Couleurs primaires -->
        <item name="colorPrimary">@color/color_c</item>        <!-- Bleu #005BB5 -->
        <item name="colorPrimaryVariant">@color/color_b</item> <!-- Violet #AA1196 -->
        <item name="colorOnPrimary">@color/white</item>

        <!-- Couleurs secondaires -->
        <item name="colorSecondary">@color/color_a</item>      <!-- Rose #FA00B2 -->
        <item name="colorSecondaryVariant">@color/color_d</item> <!-- Bleu clair #65CBF8 -->
        <item name="colorOnSecondary">@color/black</item>

        <!-- Couleurs sombres supplémentaires -->
        <item name="colorSurface">@color/color_e</item>        <!-- Violet foncé #350E5F -->
        <item name="colorAccent">@color/color_f</item>         <!-- Bleu très clair #A7EAF7 -->

        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <!-- Customize your theme here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <!-- Style de bouton personnalisé -->
        <item name="materialButtonStyle">@style/RetroNovaButtonStyle</item>
    </style>

    <!-- Style de texte par défaut -->
    <style name="RetroNovaTextStyle" parent="Widget.MaterialComponents.TextView">
        <!-- Utilisez fontFamily directement au lieu de android:fontFamily -->
        <item name="fontFamily">@font/ethnocentric_rg</item>
    </style>

    <!-- Style de bouton avec couleurs RetroNova -->
    <style name="RetroNovaButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/color_c</item>
        <!-- Utilisez fontFamily directement au lieu de android:fontFamily -->
        <item name="fontFamily">@font/ethnocentric_rg</item>
    </style>
</resources>